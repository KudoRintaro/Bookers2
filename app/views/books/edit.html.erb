<div class="container mt-3">
  <div class="row">
    <div class="mx-auto col-md-8">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <h6>Title</h6>
        <%= f.text_field :title, size: "57" %>
      </div>
      <div class="form-group">
        <h6>Opinion</h6>
        <%= f.text_area :body, size: "60" %>
      </div>
      
      <button type="submit" class="btn btn-success btn-md mt-3">Update Book</button>
      <% end %>
    </div>
  </div>
</div>