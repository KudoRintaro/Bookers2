<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <% if @user.image.attached? %>
        <p><%= image_tag @user.image(50,50) %></p>
       <% else %>
        <%= image_tag "no_image", size: "100×66" %>
       <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <td><strong><%= @user.name %></strong></td>
          </tr>
          <tr>
            <th scope="row">introduction</th>
            <td><strong><%= @user.introduction %></strong></td>
          </tr>
        </tbody>
      </table>

       <a class="btn btn-outline-secondary btn-block btn-lg" href="users/:id/edit" role="button">
         <i class="fa-solid fa-gear"></i>
       </a>

       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>

       <h5 class="font-weight-light">Title</h5>
       <%= f.text_field :title %>

       <h5 class="font-weight-light">Opinion</h5>
       <%= f.text_area :body %>

       <button type="submit" class="btn btn-success btn-md mt-3">Create Book</button>

       <% end %>
    </div>

<%# ここからページ右側 %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table">
        <thead>
         <tr>
           <th></th>
           <th scope="col"><strong>Title</strong></th>
           <th scope="col"><strong>Opinion</strong></th>
         </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
            <td>
              <% if @user.image.attached? %>
               <%= link_to user_path(book.user_id) do %>
            　 <%= image_tag @user.image(100,66) %>
            　 <% end %>
              <% else %>
               <%= link_to user_path(book.user_id) do %>
               <%= image_tag "no_image", size: "100×66" %>
               <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
