<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <img src="/Bookers2/app/assets/images/sample-author1.jpg">

      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <td><strong><%= @user.name %></strong></td>
          </tr>
          <tr>
            <th scope="row">introduction</th>
            <td><strong>aaaaaaa</strong></td>
          </tr>
        </tbody>
      </table>
       <a class="btn btn-outline-secondary btn-block btn-lg" href="users/:id/edit" role="button">
         <i class="fa-solid fa-gear"></i>
       </a>

       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>

       <h5 class="font-weight-light">Title</h5>
       <%= f.text_field :title %>

       <h5 class="font-weight-light">Opinion</h5>
       <%= f.text_area :body %>

       <button type="submit" class="btn btn-success btn-md mt-3">Create Book</button>

       <% end %>
    </div>
  </div>
</div>