<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th scope="row">name</th>
            <td><strong><%= @user.name %></strong></td>
          </tr>
          <tr>
            <th scope="row">introduction</th>
            <td><strong><%= @user.introduction %></strong></td>
          </tr>
        </tbody>
      </table>

       <%= link_to edit_user_path(@user.id) do %>
        <button class="btn btn-outline-secondary btn-block btn-lg">
         <i class="fa-solid fa-gear"></i>
        </button>
       <% end %>


      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>

       <h5 class="font-weight-light">Title</h5>
        <%= f.text_field :title %>

       <h5 class="font-weight-light">Opinion</h5>
        <%= f.text_area :body %>

       <button type="submit" class="btn btn-success btn-md mt-3">Create Book</button>

      <% end %>
    </div>

  <%#ここからページ右側%>
   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>

     <table class="table table-hover">
       <thead>
         <tr>
           <th scope="col"></th>
           <th scope="col">Title</th>
           <th scope="col">Opinion</th>
         </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
         <% if(@user.id==book.user_id) %>
         <tr>
           <td><%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
           </td>
           <td>
          　<%= link_to book_path(book.id) do %>
          　 <%= book.title %>
            <% end %>
           </td>
           <td>
             <%= book.body %>
           </td>
         </tr>
         <% end %>
         <% end %>
       </tbody>
     </table>
   </div>
  </div>
</div>

