<div class="container mt-3">
  <div class="row">
    <div class="mx-auto col-md-8">
      <h2>User info</h2>
      <% if @user.errors.any? %>
       <h3>
        <%= @user.errors.count %> error prohibited this obj from being saved:
       </h3>
       <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <h6>Name</h6>
        <%= f.text_field :name, size: "57" %>
      </div>
      <div class="form-group">
        <h6>image</h6>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <h6>Introduction</h6>
        <%= f.text_area :introduction, size: "60" %>
      </div>

      <button type="submit" class="btn btn-secondary btn-md mt-3">Update User</button>
      <% end %>
    </div>
  </div>
</div>