<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <tr>
           <%= image_tag current_user.get_profile_image(100,100) %>
          </tr>
          <tr>
            <th scope="row">name</th>
            <td scope="col"><strong><%= current_user.name %></strong></td>
          </tr>
          <tr>
            <th scope="row">introduction</th>
            <td><strong><%= current_user.introduction %></strong></td>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(current_user.id) do %>
        <button class="btn btn-outline-secondary btn-block btn-lg">
         <i class="fas fa-user-cog"></i>
        </button>
      <% end %>

       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>

       <h5 class="font-weight-light">Title</h5>
       <%= f.text_field :title %>

       <h5 class="font-weight-light">Opinion</h5>
       <%= f.text_area :body %>

       <button type="submit" class="btn btn-success btn-md mt-3">Create Book</button>

       <% end %>
    </div>

  <%#ここからページ右側 %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table">
        <thead>
          <tr>
            <th scope="col"><strong>image</strong></th>
            <th scope="col"><strong>name</strong></th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
         <tr>
          <td>
               <%= image_tag user.get_profile_image(80,80) %>
          </td>
          <td>
              <%= user.name %>
          </td>
          <td>
              <%= link_to user_path(user.id) do %>
               <p>Show</p>
              <% end %>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>